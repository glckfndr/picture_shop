<div class="w-full mx-auto md:w-2/3">
<%= render "layouts/notice" %>

  <h1 class="text-3xl font-bold">New Order</h1>

  <%= render "order", order: @order %>

  <table class="table-auto">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <%  @session_products.each do |x| %>
        <tr>
          <td><%= x.name %></td>
          <td><%= x.price %></td>
          <td><%= x.quantity %></td>
          <td><%= x.sum %></td>
      </tr>
      <% end %>

    <tr>
      <td></td>
      <td></td>
      <td>Total Sum: </td>
      <td><%= @sum %></td>
    </tr>

    </tbody>
  </table>

   <%= link_to 'Back to products', products_path, class: "add-button" %>

</div>
