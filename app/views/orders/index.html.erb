<div class="flex flex-col mx-auto">
  <div class="fixed flex">
    <h1 class="text-3xl font-bold">Orders</h1>
    <%= link_to 'Back to products', products_path, class: "green-xs-btn" %>
  </div>
  <!-- Start orders list -->
  <% @orders_products.each do |order_product| %>
    <div class="flex flex-row my-8">
      <!-- order table -->
      <%= render 'orders/order_table', order: order_product[:order] %>
      <div>
        <!-- products table -->
        <%= render 'orders/products', products: order_product[:products], total_sum: number_to_currency(order_product[:total_sum]) %>
      </div>
    </div>
    <div class="flex">
      <%= link_to 'Edit', edit_order_path(order_product[:order]), class: "green-xs-btn" %>
      <%= button_to 'Delete', order_path(order_product[:order]), :method => 'delete', data: {turbo_confirm: 'Are you sure?'}, class: "green-xs-btn" %>
    </div>
  <% end %>
  <!-- End orders list -->
</div>
