<div class="flex flex-col mx-auto">
  <h1 class="text-3xl font-bold">Orders</h1>
  <!-- Start orders list -->
  <% @orders_products.each do |order_product| %>
    <div class="flex flex-row">
      <!-- order table -->
      <%= render 'orders/order_table', order: order_product[:order] %>
      <div>
        <!-- products table -->
        <table class="m-2 table-auto">
          <%= thead_tag ['Name', 'Price', 'Quantity', 'Total Price'] %>
          <tbody class="bg-white border divide-y divide-gray-100 dark:divide-gray-400 dark:bg-gray-400">
            <%  order_product[:products].each do |product| %>
              <tr class="text-base text-center">
                <td class="border"><%= product[:name] %></td>
                <td class="border"><%= product[:price] %></td>
                <td class="border"><%= product[:quantity] %></td>
                <td class="border"><%= product[:sum] %></td>
              </tr>
            <% end %>
            <tr class="text-base">
              <td colspan='3' class='indent-1'>Total Sum: </td>
              <td class='indent-1'><%= number_to_currency(order_product[:total_sum]) %></td>
            </tr>
          </tbody>
        </table>
        <!-- end products table -->
      </div>
    </div>
    <%= link_to 'Edit', edit_order_path(order_product[:order]), class: "blue-xl-btn" %>
    <%= link_to 'Delete', edit_order_path(order_product[:order]), class: "blue-xl-btn" %>
  <% end %>
  <!-- End orders list -->
  <%= link_to 'Back to products', products_path, class: "blue-xl-btn" %>
</div>
