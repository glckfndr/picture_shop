<div class="flex flex-col items-center w-full">
  <%= render "layouts/notice" %>

  <div class="flex items-center justify-center rounded-md bg-slate-400">
    <h1 class="p-3 text-3xl font-semibold">Product List: buy more pay less</h1>
  </div>

  <div class="container px-5 py-2 mx-auto ">
    <div class="flex flex-wrap">
      <% @products.each do |product| %>
        <div class="w-1/5">
          <%= render product %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-center">
    <%= link_to 'New product', new_product_path, class:"px-4 py-1 text-lg text-blue-600 bg-blue-200 rounded-full hover:bg-blue-800 hover:text-yellow-100" %>
  </div>
</div>
