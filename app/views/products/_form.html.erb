<%= simple_form_for @product, defaults: { input_html: { class: 'block shadow rounded-md border border-gray-500 outline-none px-3 py-2 mt-2 w-2/3' } } do |f| %>
  <%= render 'layouts/error', item: product %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :balance %>

  <%= f.button :submit, class: 'rounded-lg py-3 my-5 ms-2 px-5 bg-neutral-800 text-white inline-block font-medium cursor-pointer' %>
<% end %>
