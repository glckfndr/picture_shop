<%= simple_form_for product, defaults: { input_html: { class: 'block text-xl bg-grey-300 shadow rounded-md border border-gray-500 outline-none px-3 py-2 mt-2 w-2/3' } } do |f| %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :balance %>

  <%= f.button :submit, class: "add-button" %>
<% end %>
